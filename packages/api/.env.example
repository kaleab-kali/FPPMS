# Application
APP_NAME=EPPMS
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGINS=http://localhost:5173

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ppms_db?schema=public"
DATABASE_LOGGING=false
DATABASE_MAX_CONNECTIONS=10

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN=8h
SESSION_TIMEOUT=30
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION=30
PASSWORD_MIN_LENGTH=8
PASSWORD_EXPIRY_DAYS=90
BCRYPT_SALT_ROUNDS=12

# File Storage
FILE_STORAGE_ROOT=./uploads
PHOTOS_PATH=photos
DOCUMENTS_PATH=documents
CERTIFICATES_PATH=certificates
TEMP_PATH=temp
MAX_PHOTO_SIZE=10485760
MAX_DOCUMENT_SIZE=52428800

# Field-Level Encryption (optional - omit to disable)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
FIELD_ENCRYPTION_KEY=
FIELD_ENCRYPTION_SALT=ppms-field-encryption-salt

# Allowed Origins for CORS (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:5173

# Tenant Settings
DEFAULT_TENANT_CODE=HQ
EMPLOYEE_ID_PREFIX=FPC
