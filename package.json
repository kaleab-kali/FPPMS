{
	"name": "ppms",
	"version": "1.0.0",
	"description": "",
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "module",
	"workspaces": [
		"packages/api",
		"packages/web",
		"packages/e2e"
	],
	"imports": {
		"#api/*": "./packages/api/src/*",
		"#web/*": "./packages/web/src/*",
		"#e2e/*": "./packages/e2e/tests/*"
	},
	"scripts": {
		"typecheck": "npm run typecheck --workspaces",
		"dev": "npm run dev:api & npm run dev:web",
		"dev:api": "npm --workspace=packages/api run start:dev",
		"dev:web": "npm --workspace=packages/web run dev",
		"build": "npm run build:api && npm run build:web",
		"build:api": "npm --workspace=packages/api run build",
		"build:web": "npm --workspace=packages/web run build",
		"test": "npm --workspace=packages/api run test",
		"test:api": "npm --workspace=packages/api run test",
		"test:e2e": "npm --workspace=packages/e2e run test",
		"e2e:ci": "npm run e2e:ci --workspace=packages/e2e",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"lint:ci": "biome ci --max-diagnostics=none",
		"format": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"typescript": "5.9.3"
	}
}
